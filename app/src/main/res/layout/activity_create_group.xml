<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutColour"
    tools:context=".CreateGroupActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/navbar"
        android:padding="7dp">
        <ImageButton
            android:id="@+id/BackButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/navbar"
            android:clickable="true"
            android:onClick="backToMyGroups"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            app:tint="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Create Group"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="@font/alata"
            android:textSize="25sp" />
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileGroup"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/baseline_group_24"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/navbar"/>


    <EditText
        android:id="@+id/inputGroupName"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/inpuTextBg"
        android:drawableStart="@drawable/baseline_drive_file_rename_outline_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/alata"
        android:hint="Group Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/placeholder"
        android:textColorHint="@color/placeholder" />

    <Button
        android:id="@+id/saveGroup"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-7dp"
        android:backgroundTint="#a88671"
        android:text="Save" />

</RelativeLayout>